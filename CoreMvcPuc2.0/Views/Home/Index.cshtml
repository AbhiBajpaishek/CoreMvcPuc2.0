@model IEnumerable<CoreMvcPuc2.Model.Employee>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <table>
            <thead>
                <tr>Id</tr>
                <tr>Name</tr>
                <tr>Email</tr>
                <tr>Department</tr>
            </thead>
            <tbody>
                @{ 
                    foreach(var emp in Model)
                    {
                        <tr>
                            <td>@emp.Id</td>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.Department</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </body>
    </html>