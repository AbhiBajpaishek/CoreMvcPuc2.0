@model EmployeeCreateViewModel

    <form enctype="multipart/form-data" method="post" asp-controller="home" asp-action="create">
        <div>
            <label asp-for="Name">
            </label>
            <input asp-for="Name" />
            <span class="alert-danger" asp-validation-for=Name></span>
        </div>

        <div>
            <label asp-for="Email">
            </label>
            <input asp-for="Email" />
            <span class="alert-danger" asp-validation-for=Email></span>
        </div>

        <div>
            <label asp-for="Department">
            </label>
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Select Department</option>
            </select>
            <span class="alert-danger" asp-validation-for=Department></span>
        </div>

        <div>
            <label asp-for="Photo">
            </label>
            <div class="custom-file">
                <input asp-for="Photo" class="custom-file-input" />
                <label class="custom-file-label">Choose file...</label>
            </div>
            <span class="alert-danger" asp-validation-for=Email></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <button type="submit">
                Create
            </button>
        </div>
    </form>
